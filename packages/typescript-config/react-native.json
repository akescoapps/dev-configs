{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "React Native",
  "extends": "./base.json",
  "compilerOptions": {    
    "target": "ESNext",
    "module": "preserve",           
    "moduleResolution": "bundler",
    "jsx": "react-native",          
    "lib": ["DOM", "ESNext"],    
    "allowJs": true,
    "declaration": false,
    "noEmit": true,
    "incremental": true,
    "customConditions": ["react-native"]
  }
}
